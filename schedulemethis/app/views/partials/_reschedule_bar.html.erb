<hr>
<div class="owl-carousel">
	<% @nc_events.each do |e| %>
		<div class="row col s10 z-depth-2" id="event_boxes">
			<div class="col s12 center white-text">
				<%= e.short_description %>
			</div>
			<div class = "col s2 offset-s3 white-text">
				<i class="material-icons" id="finished" onclick="finished(<%= e.id %>)">done</i>
			</div>
			<div class = "col s2 offset-s2 white-text">
				<i class="material-icons" id="reschedule" onclick="reschedule(<%= e.id %>)">replay</i>
			</div>
		</div>

    <% end %>
</div>

<script>
$(".owl-carousel").owlCarousel();
</script>